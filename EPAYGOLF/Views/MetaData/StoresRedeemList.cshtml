@model List<Entity.StoresRedeemEntity>
@{
    ViewData["Title"] = "Redemptions Stores";
    Layout = null;
}
<table id="tblRedemptionsStoresList_datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>StoreNo</th>
            <th>StoreName</th>
            <th>Email</th>
            <th>Address1</th>
            <th>CityTown</th>
            <th>User Name</th>
            <th>StoreNameUser</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model !=null && Model.Count > 0)
        {    
            
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.StoreNo</td>
                    <td>@item.StoreName</td>
                    <td>@item.Email</td>
                    <td>@item.Address1</td>
                    <td>@item.CityTown</td>
                    <td> @item.Title @item.FirstName @item.LastName</td>
                    <td>@item.StoreNameUser</td>
                    <td>
                        <a onclick="AddRedemptionsStores(@item.StoresRedeemID)">  <i class="fa fa-edit" title="Detail"></i></a>&nbsp;
                        <a onclick="ConfirmDeleteRedemptionsStores(@item.StoresRedeemID)"><i class="fa fa-trash" title="Delete"></i></a>
                    </td>
                </tr>
            }
           
        }
        else
        {
         <tr>
             <td colspan="20" class="alert alert-danger" style="text-align:center">No record found</td>
         </tr>
        }

     
    </tbody>
    <tfoot>
        <tr>
            <th>StoreNo</th>
            <th>StoreName</th>
            <th>Email</th>
            <th>Address1</th>
            <th>CityTown</th>
            <th>User FirstName/LastName</th>
            <th>StoreNameUser</th>
            <th>Actions</th>
        </tr>
    </tfoot>
</table>

<script type="text/javascript">
    $('#tblRedemptionsStoresList_datatable').DataTable({
        "order": [],
        "paging": true,
        "lengthChange": false,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
    });
</script>
